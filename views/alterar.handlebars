<div class="card text-center">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <a class="nav-link" aria-current="true" href="http://localhost:8081/">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="http://localhost:8081/cad">Cadastrar</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active">Alterar</a>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <form action="/update" method="post">
            {{#each posts}}
                <p>Código: </p>
                <input type="text" name="id" value="{{id}}" readonly="true">

                <p>Titulo: </p>
                <input type="text" name="titulo" value="{{titulo}}">

                <p>Conteúdo: </p>
                <textarea name="conteudo">{{conteudo}}</textarea><br>

                <input type="submit" value="Alterar" class="btn btn-dark">
                <hr>
            {{/each}}
        </form>
    </div>
</div>